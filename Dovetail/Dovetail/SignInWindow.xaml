<Window x:Class="Dovetail.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dovetail"
        mc:Ignorable="d"
        Title="Dovetail - Sign In" Height="350" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Border Margin="20">
        <StackPanel>
            <Label Content="Sign In" HorizontalAlignment="Center" FontSize="20"></Label>
            <Separator Margin="10"></Separator>
            <Label Content="Username"></Label>
            <TextBox Name="txtUsername" FontSize="12" Height="25" VerticalContentAlignment="Center"></TextBox>
            <Label Content="Password"></Label>
            <PasswordBox Name="txtPassword" FontSize="12" Height="25" VerticalContentAlignment="Center" KeyUp="txtPassword_KeyUp"></PasswordBox>
            <Button Name="btnSignIn" Click="btnSignIn_Click" Content="Sign in" Margin="0 20 180 20" BorderThickness="0 0 0 0" Background="#00a1f1" Foreground="#ffffff" Height="30" FontWeight="Bold"></Button>
        </StackPanel>
    </Border>
</Window>
